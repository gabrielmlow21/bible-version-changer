{
  "name": "Bible Version Changer - French",
  "description": "Bible Verse Changer Extension for the French language",
  "version": "1.2.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "Bible Version Changer - French"
  },
  "content_scripts": [
    {
      "matches": [
        "*://bible.mcgi.org/*",
        "*://bible.addcit.org/*",
        "*://bible.mcgi.app/*"
      ],
      "js": ["contentScript.js"]
    }
  ]
}
